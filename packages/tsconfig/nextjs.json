{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "esnext",
    "noEmit": true,
    "plugins": [{ "name": "next" }],
    "strict": false,
    "target": "ES2022"
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
