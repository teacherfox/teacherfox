{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Teacherfox Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently 'pnpm generate' 'pnpm migrate' 'nodemon src/index.ts'",
    "start": "prisma migrate deploy && node --conditions=javascript dist/index.js",
    "build": "tsc",
    "clean": "rm -rf dist node_modules .turbo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "update": "pnpm update --latest && pnpm install && pnpm generate",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "migrate:down": "npx prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma --script > down.sql",
    "codegen": "graphql-codegen-esm --config src/schema/codegen.ts"
  },
  "author": "",
  "license": "UNLICENCED",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@prisma/client": "^5.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "20.4.2",
    "concurrently": "^8.2.0",
    "cross-env": "7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-node": "workspace:*",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.370.0",
    "@graphql-tools/schema": "10.0.0",
    "@graphql-yoga/plugin-disable-introspection": "^1.0.3",
    "@graphql-yoga/subscription": "4.0.0",
    "@pothos/core": "^3.30.0",
    "@pothos/plugin-prisma": "^3.55.0",
    "@pothos/plugin-relay": "^3.43.0",
    "@pothos/plugin-scope-auth": "^3.20.0",
    "@pothos/plugin-simple-objects": "^3.7.0",
    "@pothos/plugin-validation": "^3.9.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "google-auth-library": "^9.0.0",
    "graphql": "16.8.1",
    "graphql-scalars": "1.22.2",
    "graphql-yoga": "4.0.3",
    "jsonwebtoken": "^9.0.1",
    "logger": "workspace:*",
    "prisma": "^5.1.1",
    "zod": "^3.21.4"
  }
}
